{
  "name": "challenge-mercadolibre-frontend",
  "description": "Frontend for the MercadoLibre challenge.",
  "version": "0.0.1",
  "author": "Mat√≠as Puig",
  "license": "NONE",
  "homepage": "",
  "private": true,
  "keywords": [
    "mercadolibre",
    "challenge",
    "frontend"
  ],
  "scripts": {
    "_clean": "rimraf .next out build",
    "_control": "run-s lint format type-check test:unit && yarn audit --production && echo \"\nControl finished!\n\"",
    "lint": "eslint --fix --ignore-path .eslintignore \"src/**/*.+(ts|tsx|js|jsx)\" && stylelint --fix --aei --config .stylelintrc \"src/**/*.+(css|scss|sass)\"",
    "format": "prettier --write --ignore-path .gitignore \"src/**/*.+(ts|tsx|js|jsx)\"",
    "type-check": "tsc",
    "test:unit": "cross-env JEST_HTML_REPORTER_OUTPUT_PATH=docs/tests/unit.html jest --no-cache --forceExit --config jest.config.js --detectOpenHandles ./tests/unit",
    "test:integration": "cross-env JEST_HTML_REPORTER_OUTPUT_PATH=docs/tests/integration.html jest --no-cache --forceExit --config jest.config.js --detectOpenHandles ./tests/integration",
    "dev": "next dev",
    "build-stats": "ANALYZE=true run-s build",
    "build": "npm run lint && run-s _clean && next build",
    "export": "npm run build && next export",
    "start": "next start"
  },
  "dependencies": {
    "axios": "0.27.2",
    "date-fns": "2.28.0",
    "i18next": "21.8.11",
    "lodash": "4.17.21",
    "next": "12.2.0",
    "next-seo": "5.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "7.33.0",
    "react-i18next": "11.17.3",
    "react-responsive-carousel": "3.2.23",
    "sass": "1.53.0",
    "sweetalert2": "11.4.19",
    "winston": "3.8.0"
  },
  "devDependencies": {
    "@types/lodash": "4.14.182",
    "@types/node": "18.0.0",
    "@types/react": "18.0.14",
    "@typescript-eslint/eslint-plugin": "5.30.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.1.0",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "postcss-scss": "4.0.4",
    "stylelint": "14.9.1",
    "stylelint-config-recommended": "8.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.2.0",
    "typescript": "4.7.4"
  }
}
