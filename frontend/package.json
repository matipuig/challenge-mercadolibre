{
  "name": "challenge-mercadolibre-frontend",
  "description": "Frontend for the MercadoLibre challenge.",
  "version": "0.0.0",
  "author": "Mat√≠as Puig",
  "license": "NONE",
  "homepage": "",
  "private": true,
  "keywords": [
    "mercadolibre",
    "challenge",
    "frontend"
  ],
  "scripts": {
    "_clean": "rimraf .next out build",
    "_control": "run-s lint format type-check test:unit && yarn audit --production && echo \"\nControl finished!\n\"",
    "lint": "eslint --fix --ignore-path .eslintignore \"src/**/*.+(ts|tsx|js|jsx)\" && stylelint --fix --aei --config .stylelintrc \"src/**/*.+(css|scss|sass)\"",
    "format": "prettier --write --ignore-path .gitignore \"src/**/*.+(ts|tsx|js|jsx)\"",
    "type-check": "tsc",
    "test:unit": "cross-env JEST_HTML_REPORTER_OUTPUT_PATH=docs/tests/unit.html jest --no-cache --forceExit --config jest.config.js --detectOpenHandles ./tests/unit",
    "test:integration": "cross-env JEST_HTML_REPORTER_OUTPUT_PATH=docs/tests/integration.html jest --no-cache --forceExit --config jest.config.js --detectOpenHandles ./tests/integration",
    "dev": "next dev",
    "build-stats": "ANALYZE=true run-s build",
    "build": "npm run lint && npm run _clean && next build",
    "next_build": "next build",
    "export": "npm run build && next export",
    "start": "next start"
  },
  "dependencies": {
    "axios": "0.26.0",
    "i18n": "0.15.0",
    "i18next": "21.6.11",
    "lodash": "4.17.21",
    "next": "12.1.0",
    "next-seo": "5.1.0",
    "postcss-scss": "4.0.3",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hook-form": "7.27.0",
    "react-i18next": "11.15.4",
    "react-responsive-carousel": "3.2.23",
    "sweetalert2": "11.4.19",
    "winston": "3.8.0"
  },
  "devDependencies": {
    "@types/i18n": "0.13.3",
    "@types/jest": "27.4.0",
    "@types/lodash": "4.14.182",
    "@types/node": "17.0.18",
    "@types/react": "17.0.39",
    "@types/testing-library__jest-dom": "5.14.2",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "eslint": "8.9.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-next": "12.1.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-testing-library": "5.0.5",
    "jest": "27.5.1",
    "prettier": "2.5.1",
    "sass": "1.49.8",
    "stylelint": "14.5.1",
    "stylelint-config-recommended": "7.0.0",
    "stylelint-declaration-block-no-ignored-properties": "2.5.0",
    "stylelint-order": "5.0.0",
    "stylelint-scss": "4.1.0",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  }
}
