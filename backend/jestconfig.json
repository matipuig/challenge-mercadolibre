{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testEnvironment": "node",
  "testRegex": "/.*\\.test\\.(js|ts)$",
  "moduleDirectories": ["node_modules", "~"],
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "moduleNameMapper": {
    "~(.*)$": "<rootDir>/src/$1"
  },
  "reporters": ["default"],
  "setupFiles": ["dotenv/config"],
  "verbose": true
}
